<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.carrentalapplication.controller.CusomerActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/addCusomer_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addCustomer"/>
        <Button
            android:id="@+id/getCusomer_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/getCustomer"/>

        <Button
            android:id="@+id/isExistCusomer_bth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/isExistCusomer" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
