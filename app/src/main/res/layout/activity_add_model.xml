<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.carrentalapplication.controller.AddModelActivity">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1">
        <EditText
            android:id="@+id/editCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/code"
            android:inputType="number" />
        <EditText
            android:id="@+id/editCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/Company"
            android:inputType="text" />
        <EditText
            android:id="@+id/editModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/modelName"
            android:inputType="text" />
        <EditText
            android:id="@+id/editeNgineCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/engineCapacity"
            android:inputType="text" />
        <Spinner
            android:id="@+id/editGear"
            android:layout_width="330dp"
            android:layout_height="wrap_content"

             />


        <EditText
            android:id="@+id/editSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/seats"
            android:inputType="number" />
        <Button
            android:id="@+id/OK_addModel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/OK_addModel"
            />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>
